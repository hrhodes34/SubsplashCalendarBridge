# Subsplash Calendar Bridge Configuration
# Copy this file to .env and modify as needed

# Google Calendar IDs for each ministry area
# Get these from your Google Calendar settings
PRAYER_CALENDAR_ID=your_prayer_calendar_id_here
BAM_CALENDAR_ID=your_bam_calendar_id_here
KIDS_CALENDAR_ID=your_kids_calendar_id_here
COLLEGE_CALENDAR_ID=your_college_calendar_id_here
ADT_CALENDAR_ID=your_adt_calendar_id_here
MISSIONS_CALENDAR_ID=your_missions_calendar_id_here
YOUTH_CALENDAR_ID=your_youth_calendar_id_here
WOMEN_CALENDAR_ID=your_women_calendar_id_here
MEN_CALENDAR_ID=your_men_calendar_id_here
LIFEGROUP_CALENDAR_ID=your_lifegroup_calendar_id_here
STAFF_CALENDAR_ID=your_staff_calendar_id_here
ELDER_CALENDAR_ID=your_elder_calendar_id_here
WORSHIP_CALENDAR_ID=your_worship_calendar_id_here
PROPHETIC_CALENDAR_ID=your_prophetic_calendar_id_here
TEACHING_CALENDAR_ID=your_teaching_calendar_id_here
CHURCHWIDE_CALENDAR_ID=your_churchwide_calendar_id_here
HUB_CALENDAR_ID=your_hub_calendar_id_here

# OAuth 2.0 Configuration
# Path to your Google service account credentials JSON file
GOOGLE_CREDENTIALS_FILE=oauth_credentials.json

# Scraping Configuration
# How many months ahead to check for events
MAX_MONTHS_TO_CHECK=6
# Stop if this many consecutive months have no events
MAX_CONSECUTIVE_EMPTY_MONTHS=3
# How long to wait for browser operations
BROWSER_WAIT_TIME=10

# Debug Options (set to 'true' only when troubleshooting)
SAVE_DEBUG_FILES=false
VERBOSE_DEBUG=false
SAVE_STATUS_FILE=false
LOG_LEVEL=info
